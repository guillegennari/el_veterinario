<h1>All Pets</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Race</th>
      <th>Birthdate</th>
      <th>Visitas</th>
      <th>Historial</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @all_pets.each do |pet| %>
      <tr>
        <td><%= pet.name %></td>
        <td><%= pet.race %></td>
        <td><%= pet.birthdate %></td>
        <td><%= pet.history_count%></td>
        <td>
        <% pet.pet_histories.each do |pet_history| %>
          <span><%= pet_history.created_at %> > <%= pet_history.description %></span><br/>
        <% end %>
        </td>
        <td><%= link_to 'Show', client_pet_path(pet.client, pet) %></td>
        <td><%= link_to 'Edit', edit_client_pet_path(pet.client,pet) %></td>
        <td><%= link_to 'Destroy', client_pet_path(pet.client, pet), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>